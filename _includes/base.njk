<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Sintoniza Latina Live, tu radio online con la mejor mÃºsica.">
    
    <title>{{ title }}</title>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sakura.css/css/sakura.css" type="text/css">
    <link rel="stylesheet" href="/latina/css/custom.css">
    <link rel="icon" href="/latina/favicon.ico" type="image/x-icon">

    <style>
        #theme-toggle {
            position: fixed; top: 15px; right: 15px;
            background-color: #f0f0f0; border: 1px solid #ccc;
            border-radius: 50%; width: 45px; height: 45px;
            cursor: pointer; font-size: 20px; z-index: 1000;
        }
        body.dark #theme-toggle {
            background-color: #333; border-color: #555; color: #fff;
        }
        #radio-alert {
            display:none; background: #ffcc00; color: #000; padding: 15px; 
            text-align: center; font-weight: bold; position: fixed; 
            top: 0; left: 0; width: 100%; z-index: 9999;
        }
    </style>
</head>

<body class="light">
    <div id="radio-alert"></div>

    <button id="theme-toggle" aria-label="Cambiar entre tema claro y oscuro">ðŸŒ™</button>

    <header class="welcome-section">
        <h2>Â¡Latina Live!</h2>
        <img src="/latina/img/logo.jpg" alt="Logo Latina Live">
        <p>Â¡Bienvenido a tu apertura auditiva!</p>
    </header>

    <main>
        {{ content | safe }}
    </main>

    <footer class="site-footer">
        <p>&copy; 2025 Latina Live</p>
    </footer>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // --- TEMA ---
        const themeToggle = document.getElementById('theme-toggle');
        const body = document.body;
        if (themeToggle) {
            const applyTheme = (theme) => {
                if (theme === 'dark') {
                    body.classList.remove('light'); body.classList.add('dark');
                    themeToggle.textContent = 'â˜€ï¸';
                } else {
                    body.classList.remove('dark'); body.classList.add('light');
                    themeToggle.textContent = 'ðŸŒ™';
                }
            };
            applyTheme(localStorage.getItem('theme') || 'light');
            themeToggle.addEventListener('click', () => {
                const newTheme = body.classList.contains('light') ? 'dark' : 'light';
                applyTheme(newTheme);
                localStorage.setItem('theme', newTheme);
            });
        }

        // --- AUDIO ---
        const audio = document.getElementById('audio');
        if (audio) {
            const trackInfo = document.getElementById('track-info');
            const streamUrl = "https://ahmrs.net/listen/latina/live";
            audio.src = streamUrl;
            audio.volume = 0.2;

            async function fetchMetadata() {
                try {
                    const response = await fetch('https://ahmrs.net/api/nowplaying/1');
                    const data = await response.json();
                    trackInfo.textContent = `Escuchando: ${data.now_playing?.song?.artist} - ${data.now_playing?.song?.title}`;
                } catch (e) { trackInfo.textContent = "Latina Live - Sintonizando..."; }
            }
            fetchMetadata();
            setInterval(fetchMetadata, 15000);
            audio.play().catch(e => console.log("Bloqueo de audio inicial esperado."));
        }
    });
    </script>

    <script type="module" src="/latina/scripts/notificaciones.js"></script>
</body>
</html>