        </nav>
    </footer>

    <!-- Schema Markup -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "RadioStation",
      "name": "Latina Live",
      "url": "https://latinalive.net",
      "logo": "https://latinalive.net/img/logo.jpg",
      "description": "Tu alma, tu m√∫sica. Radio latina con la mejor m√∫sica en vivo.",
      "sameAs": [
        "https://facebook.com/latinalive",
        "https://instagram.com/latinalive"
      ]
    }
    </script>
    
    <!-- Scripts -->
    <script src="https://unpkg.com/swup@4"></script>
    <script src="/scripts/player.js" defer></script>
    <script type="module" src="/scripts/notificaciones.js" defer></script>
    
    <script>
    // Initialize Locutor Update (Persistent)
    async function actualizarLocutor() {
        try {
            const respuesta = await fetch('/api/estado');
            const datos = await respuesta.json();
            const locutorEl = document.getElementById('nombre-locutor');
            if(locutorEl) locutorEl.innerText = datos.locutor;
        } catch (error) {
            console.log("Locutor update failed", error);
        }
    }
    // Run once and interval
    actualizarLocutor();
    setInterval(actualizarLocutor, 10000);

    // Initialize Swup
    const swup = new Swup({
        containers: ["#swup"]
    });

    // Re-run scripts on content replace
    async function initPageScripts() {
        window.scrollTo(0, 0);
        
        // Dynamic Import of Chat logic if element exists
        const chatBox = document.getElementById('chat-container');
        if(chatBox) {
            // Clear old interval if exists
            if(window.chatInterval) clearInterval(window.chatInterval);
            
            try {
                // Use a timestamp to force module reload or just rely on function export
                const module = await import('/scripts/chat.js');
                if(module && module.initChat) {
                    module.initChat();
                }
            } catch(e) {
                console.error("Chat script failed", e);
            }
        }
    }

    swup.hooks.on('content:replace', initPageScripts);
    
    // Run on initial load too
    document.addEventListener('DOMContentLoaded', initPageScripts);

    // Navbar Scrolled State
    const nav = document.querySelector('.site-nav');
    window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
            nav.classList.add('scrolled');
        } else {
            nav.classList.remove('scrolled');
        }
    });

    // Theme Toggle Logic
    const toggleBtn = document.getElementById('theme-toggle');
    const themeIcon = document.getElementById('theme-icon');
    
    if(toggleBtn) {
        toggleBtn.addEventListener('click', () => {
            let currentTheme = document.documentElement.getAttribute('data-theme');
            let newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            
            document.documentElement.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateIcon(newTheme);
        });
    }

    function updateIcon(theme) {
        if(themeIcon) themeIcon.textContent = theme === 'dark' ? 'üåô' : '‚òÄÔ∏è';
    }
    
    // Init Icon
    updateIcon(document.documentElement.getAttribute('data-theme'));
    </script>
</body>
</html>
