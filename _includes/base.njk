<body class="light">
    <div id="radio-alert"></div>

    <button id="theme-toggle" aria-label="Cambiar entre tema claro y oscuro">ðŸŒ™</button>

    <header class="welcome-section">
        <h2>Â¡Latina Live!</h2>
        <img src="/latina/img/logo.jpg" alt="Logo Latina Live">
        <p>Â¡Bienvenido a tu apertura auditiva!</p>
        <p>La mÃºsica es un legado, es historia, es cultura. Latina Live ha llegado para mostrarte tu alma, tu mÃºsica.</p>
    </header>

    <main>
        {{ content | safe }}
    </main>

    <footer class="site-footer">
        <p>&copy; 2025 Latina Live</p>
    </footer>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        
        // --- LÃ“GICA DEL CAMBIADOR DE TEMA ---
        const themeToggle = document.getElementById('theme-toggle');
        const body = document.body;
        if (themeToggle) {
            const applyTheme = (theme) => {
                if (theme === 'dark') {
                    body.classList.remove('light');
                    body.classList.add('dark');
                    themeToggle.textContent = 'â˜€ï¸';
                } else {
                    body.classList.remove('dark');
                    body.classList.add('light');
                    themeToggle.textContent = 'ðŸŒ™';
                }
            };
            const storedTheme = localStorage.getItem('theme') || 'light';
            applyTheme(storedTheme);
            themeToggle.addEventListener('click', () => {
                const newTheme = body.classList.contains('light') ? 'dark' : 'light';
                applyTheme(newTheme);
                localStorage.setItem('theme', newTheme);
            });
        }

        // --- LÃ“GICA DEL REPRODUCTOR DE AUDIO (Restaurada segÃºn tu original) ---
        const audio = document.getElementById('audio');
        if (audio) {
            const trackInfo = document.getElementById('track-info');
            const volumeDisplay = document.getElementById('volume-display');
            const lowerVolumeBtn = document.getElementById('lowerVolumeBtn');
            const raiseVolumeBtn = document.getElementById('raiseVolumeBtn');
            const streamUrl = "https://ahmrs.net/listen/latina/live";
            audio.src = streamUrl;
            audio.volume = 0.2;

            function updateVolumeDisplay() {
                if (volumeDisplay) volumeDisplay.textContent = `Volumen: ${Math.round(audio.volume * 100)}%`;
            }

            async function fetchMetadata() {
                if (!trackInfo) return;
                try {
                    const response = await fetch('https://ahmrs.net/api/nowplaying/1');
                    if (!response.ok) throw new Error(`Error de red: ${response.status}`);
                    const data = await response.json();
                    const songTitle = data.now_playing?.song?.title || "Sin informaciÃ³n";
                    const songArtist = data.now_playing?.song?.artist || "Desconocido";
                    trackInfo.textContent = `Escuchando: ${songArtist} - ${songTitle}`;
                } catch (error) {
                    trackInfo.textContent = "InformaciÃ³n de la canciÃ³n no disponible.";
                    console.error("Error al obtener los metadatos:", error);
                }
            }

            if(lowerVolumeBtn) lowerVolumeBtn.addEventListener('click', () => {
                audio.volume = Math.max(0, audio.volume - 0.1);
                updateVolumeDisplay();
            });
            if(raiseVolumeBtn) raiseVolumeBtn.addEventListener('click', () => {
                audio.volume = Math.min(1, audio.volume + 0.1);
                updateVolumeDisplay();
            });

            updateVolumeDisplay();
            fetchMetadata();
            setInterval(fetchMetadata, 15000);
            audio.play().catch(e => console.warn("La reproducciÃ³n automÃ¡tica fue bloqueada.", e));
        }
    });
    </script>

    <script type="module" src="/latina/scripts/notificaciones.js"></script>
